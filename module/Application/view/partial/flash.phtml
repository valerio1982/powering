<?php

# Note $this->flashMessenger() refers to a helper that is defined in the Framework
$flash = $this->flashMessenger();

$flash->setMessageOpenFormat(
    '<div%s>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
            &times;
        </button>

        <ul class="list-unstyled">
            <li>'
)->setMessageSeparatorString('</li><li>')->setMessageCloseString('</li></ul></div>');


echo $flash->render('info', ['alert myAlert', 'alert-dismissable', 'alert-info']);
echo $flash->render('error', ['alert myAlert', 'alert-dismissable', 'alert-danger']);
echo $flash->render('default', ['alert myAlert', 'alert-dismissable', 'alert-warning']);
echo $flash->render('success', ['alert myAlert', 'alert-dismissable', 'alert-success']);
